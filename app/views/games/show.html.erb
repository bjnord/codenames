<div style="display: none;">
	<span id="get-word-url"><%= get_word_game_url(@game, format: :js) %></span>
	<span id="game-channel"><%= @game.id %></span>
</div>
<% if !@game.spymaster?(session) %>
	<% if @game.has_words? %>
		<%= render partial: 'view_game' %>
	<% else %>
		<%= render partial: 'please_wait' %>
	<% end %>
<% else %>
	<% if !@game.has_words? %>
		<%= render partial: 'setup_words' %>
	<% elsif !@game.has_whos? || @game.who_error %>
		<%= render partial: 'setup_whos' %>
	<% else %>
		<%= render partial: 'manage_game' %>
	<% end %>
<% end %>
